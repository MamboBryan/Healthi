<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mambo.template.ui.home.HomeFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_setupFragment"
            app:destination="@id/setupFragment"
            app:popUpTo="@id/setupFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_mealFragment"
            app:destination="@id/mealFragment" />
    </fragment>
    <fragment
        android:id="@+id/setupFragment"
        android:name="com.mambo.template.ui.setup.SetupFragment"
        android:label="fragment_setup"
        tools:layout="@layout/fragment_setup" >
        <action
            android:id="@+id/action_setupFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.mambo.template.ui.meal.MealFragment"
        android:label="New">
        <argument
            android:name="meal"
            app:argType="com.mambo.template.data.model.Meal"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/editMealFragment"
        android:name="com.mambo.template.ui.edit.EditMealFragment"
        android:label="Edit"
        tools:layout="@layout/fragment_edit_meal" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mambo.template.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>